import React, { useState, useEffect } from 'react';
import { 
  Home, 
  DollarSign, 
  Settings, 
  User, 
  Plus, 
  Calendar, 
  ClipboardList, 
  Users, 
  FileText,
  Bell,
  LogOut,
  Search,
  Filter,
  Eye,
  Edit,
  Trash2,
  CheckCircle,
  AlertCircle,
  UserPlus,
  ArrowLeft,
  Clock,
  Package,
  Activity,
  Building,
  Phone,
  Mail,
  MapPin,
  BarChart3,
  TrendingUp,
  Shield,
  Star,
  Github,
  Code,
  Database,
  Zap,
  Smartphone,
  Globe,
  AlertTriangle
} from 'lucide-react';

// Mock data for generic property management
