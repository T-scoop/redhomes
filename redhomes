  // Add Property Modal - SUBMITS REQUEST
  const AddPropertyModal = () => {
    const [propertyForm, setPropertyForm] = useState({
      name: '', address: '', totalUnits: '', description: '', yearBuilt: '', amenities: '', rentPerUnit: '',
      contactName: '', contactEmail: '', contactPhone: ''
    });

    const handleChange = (e) => {
      setPropertyForm({
        ...propertyForm,
        [e.target.name]: e.target.value
      });
    };

    const handleSubmit = (e) => {
      e.preventDefault();
      const newRequest = {
        id: allRequests.length + 1,
        ...propertyForm,
        totalUnits: parseInt(propertyForm.totalUnits),
        rentPerUnit: parseInt(propertyForm.rentPerUnit),
        status: 'pending',
        date: new Date().toISOString().split('T')[0],
        requestType: 'property',
        requestedBy: propertyForm.contactName,
        requestedByEmail: propertyForm.contactEmail
      };
      setAllRequests([...allRequests, newRequest]);
      setShowAddPropertyModal(false);
      setPropertyForm({ 
        name: '', address: '', totalUnits: '', description: '', yearBuilt: '', amenities: '', rentPerUnit: '',
        contactName: '', contactEmail: '', contactPhone: ''
      });
      alert('Property addition request submitted successfully! An administrator will review your request.');
    };

    return (
      <div className="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
        <div className="bg-white rounded-xl p-6 w-full max-w-md mx-4">
          <h2 className="text-xl font-semibold text-gray-900 mb-4">Request to Add New Property</h2>
          <form onSubmit={handleSubmit}>
