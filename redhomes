    occupiedUnits: 22,
    monthlyRevenue: 44000,
    managerId: 101,
    managerName: "Sarah Johnson",
    description: "Modern apartment complex with 24 units, built in 2020. Features include gym, pool, and secure parking.",
    yearBuilt: 2020,
    amenities: ["Gym", "Pool", "Secure Parking", "Elevator"],
    rentPerUnit: 2000
  },
  {
    id: 2,
    name: "Riverside Residences",
