  }
];

const mockServices = [
  { id: 1, name: "General Repairs", cost: 250, description: "Basic maintenance and repair services for all property units." },
  { id: 2, name: "Deep Cleaning", cost: 180, description: "Professional deep cleaning service for properties and common areas." },
  { id: 3, name: "Garbage Disposal", cost: 120, description: "Regular garbage collection and disposal services." },
  { id: 4, name: "Pest Control", cost: 300, description: "Comprehensive pest control and prevention services." },
  { id: 5, name: "Fumigation", cost: 450, description: "Professional fumigation services for severe pest infestations." },
  { id: 6, name: "Security Upgrade", cost: 800, description: "Installation of security systems and upgrades to existing security." }
];

const mockRentPayments = [
  { id: 1, propertyId: 1, unit: "A101", amount: 2000, status: "paid", date: "2026-01-01", tenantName: "John Smith", paymentMethod: "Credit Card" },
  { id: 2, propertyId: 1, unit: "A102", amount: 2000, status: "pending", date: "2026-01-05", tenantName: "Alice Johnson", paymentMethod: "Bank Transfer" },
  { id: 3, propertyId: 2, unit: "B201", amount: 1800, status: "paid", date: "2026-01-02", tenantName: "Robert Davis", paymentMethod: "Cash" },
